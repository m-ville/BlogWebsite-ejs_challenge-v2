<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">

        <div class="form-group">
            <label for="inputText">Title</label>
            <input type="text" class="form-control" id="inputText" name="postTitle" autocomplete="off" autofocus> 
        </div>
        <div class="form-group">
            <label for="inputTextArea">Post</label>
            <textarea id="inputTextArea" class="form-control" rows="5" name="postBody" autocomplete="off"></textarea>
        </div>



        <button class="btn btn-primary" type="submit" name="publish">Publish</button>
    </form>

    <%- include("partials/footer"); -%>